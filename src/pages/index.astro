---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

import '@/global.css';

import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts';
import BaseHead from '@/components/BaseHead.astro';
import Menu from '@/components/Menu.astro';
import GithubIcon from '@/components/icons/GithubIcon.astro';
import MailIcon from '@/components/icons/MailIcon.astro';
import Headshot from '@/assets/face-regular.jpg'
import FormattedDate from '@/components/FormattedDate.astro';
import Footer from '@/components/Footer.astro';
import Body from '@/components/Body.astro';

const latestPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 2);

if( !latestPosts?.length ) throw Error("Unable to determine latest blog posts");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <div class="overflow-x-hidden relative min-h-screen grid grid-rows-[auto_1fr_auto]">
      <div class="pt-4 pb-8 relative z-10">
        <Menu className="w-[380px] lg:w-[760px]" />
      </div>
      <div class="relative">
        <div class="main-bg bg-neutral-50 dark:bg-slate-900 z-0"></div>
        <main class="relative z-10 pb-8">
          <div class="ml-5 md:ml-20">
            <div class="relative h-[160px] md:h-[240px] mb-2">
              <div class="absolute w-[160px] h-[160px] md:w-[240px] md:h-[240px] rounded-full bg-teal-800 border-teal-800 border-2 z-20 overflow-hidden">
                <Image src={Headshot} alt="A headshot of myself" />
              </div>
              <div class="bg-teal-800 text-white text-2xl flex h-[40px] w-[250px] md:h-[48px] md:w-[350px] rounded-r-full absolute z-10 top-0 left-[80px] md:left-[120px] justify-end items-center">
                <h1 class="mr-4 md:mr-16 mt-[-2px]">Derek Surguy</h1>
              </div>
              <div class="bg-teal-800 text-white flex h-[32px] w-[320px] md:w-[350px] rounded-r-full absolute z-10 bottom-[40px] left-[120px] md:left-[150px] justify-end items-center">
                <a href="https://github.com/DSurguy" class="underline mr-2 mt-[-2px]">https://github.com/DSurguy</a>
                <GithubIcon className="mr-4" />
              </div>
              <div class="bg-teal-800 text-white flex h-[32px] w-[320px] md:w-[350px] rounded-r-full absolute z-10 bottom-0 left-[80px] md:left-[120px] justify-end items-center">
                <a href="mailto:Surguy.Derek@gmail.com" class="underline mr-2 mt-[-2px]">Surguy.Derek@gmail.com</a>
                <MailIcon className="mr-4" />
              </div>
            </div>
            <div class="lg:w-[500px] mr-5 md:mr-20">
              <p class="pb-4">Welcome!</p>
              <p class="pb-4">
                I&apos;m an expert front-end software engineer, competent in full-stack development, leading engineering teams and shipping maintainable software.
              </p>
              <p class="pb-8">I make stuff and put it on the internet sometimes.</p>
            </div>
          </div>
          <div class="mt-[100px] md:mt-12 w-screen">
            <div class="md:w-[600px] ml-auto mr-auto lg:ml-28 lg:w-[800px] lg:min-h-[332px] shadow-lg bg-white dark:bg-teal-900 md:rounded-md lg:flex">
              <div class="p-2">
                <h2 class="text-xl text-slate-800 pb-4">Latest Blog Posts</h2>
                {latestPosts.map(post => (
                  <article class="pb-4">
                    <h3 class="text-2xl font-semibold pt-2 pb-0 underline">
                      <a href={`/blog/${post.id}`}>{post.data.title}</a>
                    </h3>
                    <div class="text-teal-800 pb-2">Published on <FormattedDate date={post.data.pubDate} /></div>
                    <section>
                      {post.data.description}
                    </section>
                  </article>
                ))}
              </div>
            </div>
          </div>
        </main>
      </div>
      <div class="bg-neutral-50 dark:bg-slate-900 mt-auto lg:w-[240px] p-2 relative z-10">
        <Footer />
      </div>
    </div>
  </Body>
</html>
