---
import '../global.css';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import Body from '@/components/Body.astro';

type Props = CollectionEntry<'project'>['data'];

const { title, description } = Astro.props;

const baseMainClass = "relative mx-auto bg-neutral-50 dark:bg-slate-900 transition-opacity duration-200";
const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <Body>
    <div class="overflow-x-hidden relative min-h-screen grid grid-rows-[auto_1fr_auto]">
      <div class="pt-4 pb-8 relative z-10">
        <Menu className="w-[380px] lg:w-[760px]" />
      </div>
      <div class="w-[95%] sm:w-[90%] md:w-[80%] lg:w-[920px] mx-auto relative overflow-x-hidden">
        <div class="z-[-1] absolute top-0 left-0 right-0 bottom-0 bg-neutral-50 dark:bg-slate-900"></div>
        <main class={baseMainClass}>
          <slot />
        </main>
      </div>
      <div class="w-[95%] sm:w-[90%] md:w-[80%] lg:w-[920px] bg-neutral-50 dark:bg-slate-900 mx-auto p-2 relative z-10">
        <Footer />
      </div>
    </div>  
  </Body>
</html>
